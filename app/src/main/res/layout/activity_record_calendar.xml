<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDA900"
        android:minHeight="?attr/actionBarSize">


    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="한결"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    </android.support.v7.widget.Toolbar>


        <ImageView
            android:id="@+id/img1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:background="@drawable/calendar"
            android:layout_below="@+id/tool"/>

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="날짜"
            android:paddingTop="7dp"
            android:textColor="@color/color_red_light"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/tool"
            />

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/img1"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="#ffcccccc"/>


    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/view1"
        android:background="@color/color_red_light"/>

    <LinearLayout
        android:id="@+id/linear_area"
        android:layout_below="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/cardView"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_red_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView

                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/vocabulary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="어휘력"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/playBtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:layout_below="@+id/cardView"
        android:background="@drawable/border"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

     <Button
         android:id="@+id/vocaStopBtn"
         android:layout_width="60dp"
         android:layout_height="wrap_content"
         android:text="STOP"
         android:layout_below="@+id/playBtn"
         android:background="@drawable/border"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="5dp"
         />

        <Button
            android:id="@+id/vocaRSBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="RE START"
            android:layout_below="@+id/vocaStopBtn"
            android:background="@drawable/border"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/cardView2"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_red_light"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/ts2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="발음"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/chooseBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:layout_below="@+id/cardView2"
            android:background="@drawable/border"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />

        <Button
            android:id="@+id/proStopBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="STOP"
            android:layout_below="@+id/chooseBtn"
            android:background="@drawable/border"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />

        <Button
            android:id="@+id/proRSBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="RE START"
            android:layout_below="@+id/proStopBtn"
            android:background="@drawable/border"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>

     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

     <android.support.v7.widget.CardView
         android:layout_marginTop="10dp"
         android:id="@+id/cardView3"
         android:layout_width="60dp"
         android:layout_height="100dp"
         android:layout_marginLeft="10dp"
         android:background="@color/color_red_light"
         >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

             <ImageView
                 android:id="@+id/img4"
                 android:layout_width="50dp"
                 android:layout_height="40dp"
                 android:layout_gravity="center"
                 android:layout_marginTop="20dp"
                 android:src="@drawable/contin" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:text="계속성"/>
         </LinearLayout>
     </android.support.v7.widget.CardView>

         <Button
             android:id="@+id/uploadBtn"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
             android:text="PLAY"
             android:layout_below="@+id/cardView3"
             android:background="@drawable/border"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
             />

         <Button
             android:id="@+id/conStopBtn"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
             android:text="STOP"
             android:layout_below="@+id/uploadBtn"
             android:background="@drawable/border"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
             />

         <Button
             android:id="@+id/conRSBtn"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
             android:text="RE START"
             android:layout_below="@+id/conStopBtn"
             android:background="@drawable/border"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
             />

     </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

      <android.support.v7.widget.CardView
          android:layout_marginTop="10dp"
          android:id="@+id/cardView4"
          android:layout_width="60dp"
          android:layout_height="100dp"
          android:layout_marginLeft="10dp"
          android:background="@color/color_red_light"
          >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

              <ImageView
                  android:id="@+id/img5"
                  android:layout_width="50dp"
                  android:layout_height="40dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="20dp"
                  android:src="@drawable/ts4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="속도"/>
          </LinearLayout>

        </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/upload2Btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="PLAY"
                android:layout_below="@+id/cardView4"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />

          <Button
              android:id="@+id/speedStopBtn"
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:text="STOP"
              android:layout_below="@+id/upload2Btn"
              android:background="@drawable/border"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="5dp"
              />

          <Button
              android:id="@+id/speedRSBtn"
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:text="RE START"
              android:layout_below="@+id/speedStopBtn"
              android:background="@drawable/border"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="5dp"
              />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

       <android.support.v7.widget.CardView
           android:layout_marginTop="10dp"
           android:id="@+id/cardView5"
           android:layout_width="60dp"
           android:layout_height="100dp"
           android:layout_marginLeft="10dp"
           android:background="@color/color_red_light"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <ImageView
                  android:id="@+id/img6"
                  android:layout_width="50dp"
                  android:layout_height="40dp"
                  android:layout_gravity="center"
                   android:layout_marginTop="20dp"
                   android:src="@drawable/ts5" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="논리력"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/downBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="PLAY"
                android:layout_below="@+id/cardView5"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
            />

            <Button
                android:id="@+id/logicStopBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="STOP"
                android:layout_below="@+id/downBtn"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />

            <Button
                android:id="@+id/logicRSBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="RE START"
                android:layout_below="@+id/logicStopBtn"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />


        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_below="@+id/linear_area"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#ffcccccc"
        />

</RelativeLayout>
