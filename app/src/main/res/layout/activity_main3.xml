<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/mainContainer">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDA900"
            android:minHeight="?attr/actionBarSize">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/menu"
                android:id="@+id/menu"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="한결"
                android:textColor="#ffffff"
                android:textSize="30sp" />

        </android.support.v7.widget.Toolbar>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffb404">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_horizontal">


                        <TextView
                            android:id="@+id/saying"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="33dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="날짜~!"
                            android:textColor="#000000"
                            android:background="#ffffff"
                            android:textSize="30dp" />

                    </TableRow>
                </TableLayout>
            </TableRow>

            <TableRow>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <ImageButton
                            android:id="@+id/dailytest"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="15dp"
                            android:background="@android:color/transparent"
                            android:elevation="4dp"
                            android:padding="0sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dailytest" />

                        <ImageButton
                            android:id="@+id/interview"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="35dp"
                            android:background="@android:color/transparent"
                            android:elevation="4dp"
                            android:padding="0sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/virtual_interview" />

                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <ImageButton
                            android:id="@+id/training"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="15dp"
                            android:background="@android:color/transparent"
                            android:elevation="4dp"
                            android:padding="0sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/training" />

                        <ImageButton
                            android:id="@+id/record"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="35dp"
                            android:background="@android:color/transparent"
                            android:elevation="4dp"
                            android:padding="0sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/record" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <ImageButton
                            android:id="@+id/feedback"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="15dp"
                            android:background="@android:color/transparent"
                            android:elevation="4dp"
                            android:padding="0sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/feedback" />

                        <ImageButton
                            android:id="@+id/m_board"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="35dp"
                            android:background="@android:color/transparent"
                            android:elevation="4dp"
                            android:padding="0sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/m_board" />
                    </TableRow>

                </TableLayout>
            </TableRow>
        </TableLayout>
    </TableLayout>


    <ListView
        android:id="@+id/nav_list"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:divider="#23222A"
        android:dividerHeight="1dp"
        android:background="#EDA900"
        android:choiceMode="singleChoice"
        ></ListView>
</android.support.v4.widget.DrawerLayout>