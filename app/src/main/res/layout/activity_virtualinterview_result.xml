<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDA900"
            android:minHeight="?attr/actionBarSize">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="한결"
                android:textColor="#ffffff"
                android:textSize="30sp" />

        </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="감정 분석 결과"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="35dp"
            android:gravity="center_horizontal"
            android:id="@+id/score"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="초반"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#CC3D3D"
                android:textColor="#000000"
                android:id="@+id/early_first"
                android:gravity="center_horizontal"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#8041D9"
                android:textColor="#000000"
                android:id="@+id/early_second"
                android:gravity="center_horizontal"
                android:textSize="12dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="중반"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#CC3D3D"
                android:textColor="#000000"
                android:id="@+id/mid_first"
                android:gravity="center_horizontal"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#8041D9"
                android:textColor="#000000"
                android:id="@+id/mid_second"
                android:gravity="center_horizontal"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="후반"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#CC3D3D"
                android:textColor="#000000"
                android:id="@+id/late_first"
                android:gravity="center_horizontal"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#8041D9"
                android:textColor="#000000"
                android:id="@+id/late_second"
                android:gravity="center_horizontal"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="전체"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#CC3D3D"
                android:textColor="#000000"
                android:id="@+id/total_first"
                android:gravity="center_horizontal"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#8041D9"
                android:textColor="#000000"
                android:id="@+id/total_second"
                android:gravity="center_horizontal"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#1DDB16"
                android:textColor="#000000"
                android:id="@+id/total_third"
                android:gravity="center_horizontal"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#FFBB00"
                android:textColor="#000000"
                android:id="@+id/total_forth"
                android:gravity="center_horizontal"
                android:textSize="10dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>